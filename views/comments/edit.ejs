<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
                <hr>
            </div>
        </div>
    </div>
    <div class="ui huge header">Edit Comment</div>
    <form class="ui form" action="/blogs/<%= blog_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
        <div class="field">
            <textarea name="comment[text]"><%= comment.text %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ../partials/footer %>