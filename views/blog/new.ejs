<% include ../partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form class="ui form" method="POST" enctype="multipart/form-data">
    <div class="field">
      <label>Category</label>
      <input type="radio" name="blog[category]" value="Faith"> Faith
      <input type="radio" name="blog[category]" value="Fashion"> Fashion
      <input type="radio" name="blog[category]" value="Fitness"> Fitness
      <input type="radio" name="blog[category]" value="Other" checked> Other
    </div>
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="file" name="image" placeholder="image" accept="image/*" required>
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" id="editor7"></textarea>
      <script type="text/javascript">
        CKEDITOR.replace("editor7");
      </script>
    </div>
    <input 
      class="ui violet big basic button" 
      type="submit" 
      onClick="this.form.action='/blogs'"
    >
    <input 
      class="ui blue big basic button" 
      type="submit" 
      value="Save as a Draft" 
      onClick="this.form.action='/drafts'"
    >
  </form>
</div>

<% include ../partials/footer %>
