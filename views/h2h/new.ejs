<% include ../partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Listing</div>
  <form class="ui form" method="POST" action='/heartlandtohome'>
    <div class="field">
      <label>Title</label>
      <input type="text" name="h2h[title]" placeholder="title" required>
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="h2h[image]" placeholder="image url" required>
    </div>
    <div class="field">
      <label>Price</label>
      <input type="text" name="h2h[price]" placeholder="6.99" required>
    </div>
    <div class="field">
      <label>Description</label>
      <textarea name="h2h[description]" id="editor69"></textarea>
      <script type="text/javascript">
        CKEDITOR.replace("editor69");
      </script>
    </div>
    <div class="field">
      <label>URL to Etsy Listing</label>
      <input type="text" name="h2h[url]" placeholder="https://www.etsy.com/shop/HeartlandToHome/listing" required>
    </div>
    <input 
      class="ui violet big basic button" 
      type="submit" 
    >
  </form>
</div>

