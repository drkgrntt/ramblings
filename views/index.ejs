<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header">Ramblings</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% for (let i = 0; i < 5; i++) { %>
        <% if (blogs[i] !== undefined) { %>
          <div class="item">
            <div class="image">
              <img src="<%= blogs[i].image %>">
            </div>
            <div class="content">
              <a class="header" href="/blogs/<%= blogs[i]._id %>"><%= blogs[i].title %></a>
              <div class="meta">
                <span><%= blogs[i].created.toDateString() %></span>
              </div>
              <div class="description">
                <p><%- blogs[i].body.substring(0, 140) %>...</p>
              </div>
              <div class="extra">
                <a class="ui floated basic violet button" href="/blogs/<%= blogs[i]._id %>">
                  Read More
                  <i class="right chevron icon"></i>
                </a>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="more">
    <a class="ui button" href="/blogs/all">See all blog posts!</a>
  </div>
</div>

<% include ./partials/footer %>
